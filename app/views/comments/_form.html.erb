<hr>
<h2>Post Comment</h2>
<%= form_for ([@post,@post.comments.build]) do |f|  %>
    <% if @post.errors.any? %>
        <%  @post.errors.full_messages.each do |msg| %>
            <p><%= msg %></p>
    <%end %>
    <%end %>
    <b><%= f.label :username %><b><br/>
    <%= f.text_field :username ,class:'inp'%>
   <br>
    <br><%= f.label :body %></br>
    <%= f.text_area :body %>
  

    <p>
    <%= f.submit :'Post Comment',class:'post' %><br/>
    </p>
<% end %>